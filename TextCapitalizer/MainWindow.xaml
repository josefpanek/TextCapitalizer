<Window x:Class="TextCapitalizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextCapitalizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="120" Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="buttonCapitalize" Content="Capitalize the Text" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="120" Height="25" Click="buttonCapitalize_Click"/>
        <TextBox x:Name="textBoxInput" Text="" VerticalAlignment="Center" Height="18" Grid.Row="0" Margin="30,0,30,0"/>

    </Grid>
</Window>
